{
  "name": "sqs-listener-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for framework-agnostic SQS listener packages",
  "workspaces": [
    "packages/core",
    "packages/nestjs-adapter",
    "packages/fastify-adapter"
  ],
  "scripts": {
    "build": "yarn workspaces run build",
    "test": "yarn workspaces run test",
    "test:watch": "yarn workspaces run test:watch",
    "test:cov": "yarn workspaces run test:cov",
    "clean": "yarn workspaces run clean",
    "clean:all": "yarn workspaces run clean && rm -rf node_modules"
  },
  "keywords": [
    "nestjs",
    "sqs",
    "aws",
    "message-queue",
    "listener",
    "container",
    "framework-agnostic"
  ],
  "author": "ganesan arunachalam",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  }
}
