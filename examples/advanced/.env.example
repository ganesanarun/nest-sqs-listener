# Order Queue Configuration (Primary AWS Account)
ORDER_AWS_REGION=us-east-1
ORDER_AWS_ACCESS_KEY_ID=your-access-key-id
ORDER_AWS_SECRET_ACCESS_KEY=your-secret-access-key
ORDER_QUEUE_NAME=order-events

# Notification Queue Configuration (Secondary AWS Account)
NOTIFICATION_AWS_REGION=us-east-1
NOTIFICATION_AWS_ACCESS_KEY_ID=your-access-key-id
NOTIFICATION_AWS_SECRET_ACCESS_KEY=your-secret-access-key
NOTIFICATION_QUEUE_NAME=notification-events

# LocalStack Configuration (for local testing)
# Uncomment these lines to use LocalStack instead of AWS
# ORDER_AWS_ENDPOINT=http://localhost:4566
# ORDER_AWS_ACCESS_KEY_ID=test
# ORDER_AWS_SECRET_ACCESS_KEY=test
# NOTIFICATION_AWS_ENDPOINT=http://localhost:4566
# NOTIFICATION_AWS_ACCESS_KEY_ID=test
# NOTIFICATION_AWS_SECRET_ACCESS_KEY=test
